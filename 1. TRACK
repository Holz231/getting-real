    end
  end
  1.times do
    sample "C:/Users/marce/Desktop/sonic pi/FIRST SONG SAMPS/snaps", (ring 0,0,0,0,0,1).tick(:as), amp: 0.3 if (bools 1, 1, 1, 0, 0, 0, 0, 0).tick(:qwea)
    
    sleep 0.125
