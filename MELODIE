live_loop :as do
  
  use_random_seed 32231231231451
  
  notes = scale(:ds3, :blues_major, num_octaves: 2).shuffle
  
  10.times do
    
    play notes.tick(:ra) if spread(3, 16).tick(:aw)
    play notes.tick(:ra) if spread(4, 16).tick(:aw)
    play notes.tick(:ra) if spread(7, 16).tick(:aw)
    sleep 0.25
    
    
  end
  
  
end
