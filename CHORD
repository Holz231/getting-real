
eins = chord(:g3, :minor7)
zwei = chord(:a2, :minor7)

live_loop :dron do
  
  use_bpm 100
  
  use_random_seed 100
  
  4.times do
    
    play eins, attack: 1, sustain: 1, release: 1 if one_in(2)
    
    sleep 3
    
    play eins, attack: 1, sustain: 1, release: 1
    
    sleep 3
    
  end
end
    

